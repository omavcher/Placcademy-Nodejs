<style>
  /* Container for the card grid */
.intership-intership-card-container {
  margin-top: 1rem;
  margin-bottom: 1rem;
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

/* Card styling */
.intership-card {
    width: 15rem;
    height: 14rem;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0; /* Start invisible for fade-in effect */
    animation: fadeIn 1s forwards; /* Fade-in animation */
}

/* Fade-in animation for the card */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Card image styling */
.intership-card-img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    transition: transform 0.3s ease; /* Transition for zoom effect */
    animation: imgFadeIn 1s forwards; /* Fade-in animation for image */
}

/* Fade-in animation for the image */
@keyframes imgFadeIn {
    from {
        opacity: 0;
        transform: scale(1.1);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* Card content styling */
.intership-card-content {
    padding: 16px;
    position: relative;
}

/* Card title styling */
.intership-card-title {
    font-size: 18px;
    margin: 0;
    margin-bottom: 8px;
}

/* Card price styling */
.intership-card-price {
    font-size: 16px;
    color: #333;
}

/* Price strikethrough styling */
.price-strike {
    text-decoration: line-through;
    color: #999;
    margin-right: 8px;
}

/* Fee box styling */
.fee-box {
    position: absolute;
    bottom: 16px;
    right: 16px;
    background-color: #ffeb3b;
    color: #333;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 14px;
}

/* Scale effect on hover for the card */
.intership-card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* Zoom effect on hover for the image */
.intership-card-img:hover {
    transform: scale(1.1);
}

</style>

