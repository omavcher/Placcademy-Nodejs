<%= layout("/layouts/boilerplate") %>
<style>


.container-edit {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            max-width: 1200px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .profile-sidebar {
            width: 100%;
            max-width: 400px;
            text-align: center;
            padding: 20px;
            background-color: #f9f9f9;
        }

        .profile-sidebar img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
             margin-left: auto;
            margin-right: auto;
            object-fit: cover;
        }

        .profile-sidebar h3 {
            margin-top: 10px;
            color: #FB4B04;
        }

        .profile-sidebar button {
            background-color: #FB4B04;
            border: none;
            color: white;
            padding: 10px 20px;
            margin-top: 10px;
            cursor: pointer;
            transition: transform 0.3s;
        }

        .profile-sidebar button:hover {
            transform: scale(1.1);
            background-color: #e04303;
        }

        .profile-sidebar p {
          margin-top: 1rem;
            color: gray;
        }

        .form-container {
            width: 100%;
            padding: 20px;
        }

        .form-container h3 {
            color: #333;
            margin-bottom: 30px;
            font-size: 2rem;
            font-weight: 700;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            color: #FB4B04;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
            transition: box-shadow 0.3s, border-color 0.3s;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #FB4B04;
            box-shadow: 0 0 10px rgba(251, 75, 4, 0.5);
        }

        .form-group textarea {
            resize: vertical;
        }

        .form-container button {
            background-color: #FB4B04;
            border: none;
            color: white;
            padding: 15px 30px;
            cursor: pointer;
            transition: transform 0.3s;
        }

        .form-container button:hover {
            transform: scale(1.1);
            background-color: #e04303;
        }

        @media (min-width: 768px) {
            .container {
                flex-direction: row;
            }

            .profile-sidebar {
                width: 30%;
                border-right: 1px solid #ccc;
            }

            .form-container {
                width: 70%;
                padding: 40px;
            }

            .profile-sidebar img{
              margin-left: auto;
              margin-right: auto;
            }
        }
        .form-group input[type="file"] {
            display: none;
        }
    </style>

<div class="container-edit">
  <div class="profile-sidebar">
            <img src="<%= user.profile_dp %>" alt="Profile Picture">
            <h3><%= user.name %></h3>
            <button id="uploadButton">Upload New Photo</button>
            <p>Maximum upload size is 5 MB</p>
        </div>
        <div class="form-container">
            <h3>Edit Profile</h3>
            <form id="editProfileForm">
                <div class="form-group">
                    <label for="bio">Bio</label>
                    <textarea class="form-control" id="bio" rows="3"><%= user.bio %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input value="<%= user.location %>" type="text" class="form-control" id="location">
                </div>
                <div class="form-group">
                    <label for="number">Mobile Number</label>
                    <input type="text" value="<%= user.number %>"  class="form-control" id="number">
                </div>
                <div style="display: none;" class="form-group">
                    <label for="profilePicture">Profile Picture</label>
                    <input type="file" class="form-control-file" id="profilePicture">
                </div>
                <div class="form-group">
                    <label for="instagramId">Instagram ID</label>
                    <input type="text" value="<%= user.instagramId %>" class="form-control" id="instagramId">
                </div>
                <div class="form-group">
                    <label for="linkedinId">LinkedIn ID</label>
                    <input type="text" value="<%= user.linkedinId %>" class="form-control" id="linkedinId">
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
</div>
<script>
  document.getElementById('uploadButton').addEventListener('click', function() {
      document.getElementById('profilePicture').click();
  });
</script>