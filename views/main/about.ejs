<style>
  .round-animation-circle {
    height: 30vw;
    width: 30vw;
    background-color: #FB4B04;
    border-radius: 50%;
    filter: blur(20px);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -50;
    transition: top 1s ease, left 1s ease;
    animation: alternate anime 5s infinite;
  }

  @keyframes anime {
    from {
      width: 3vw;
      height: 3vw;
    }
    to {
      width: 80vw;
      height: 80vw;
    }
  }

  .containerabout {
    width: 100%;
    height: auto;
    position: relative;
    cursor: default;
  }

  .info {
    margin: 20px 0;
    text-align: center;
  }

  p {
    color: white;
    margin-bottom: 20px;
  }




  .block-effect {
    font-size: calc(8px + 6vw);
  }

  .block-reveal {
    --t: calc(var(--td) + var(--d));
    color: transparent;
    padding: 4px;
    position: relative;
    overflow: hidden;
    animation: revealBlock 0s var(--t) forwards;
  }

  .block-reveal::after {
    content: '';
    width: 0%;
    height: 100%;
    padding-bottom: 4px;
    position: absolute;
    top: 0;
    left: 0;
    background: var(--bc);
    animation: revealingIn var(--td) var(--d) forwards, revealingOut var(--td) var(--t) forwards;
  }

  @keyframes revealBlock {
    100% {
      color: #0f0f0f;
    }
  }

  @keyframes revealingIn {
    0% {
      width: 0;
    }
    100% {
      width: 100%;
    }
  }

  @keyframes revealingOut {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .abs-site-link {
    position: fixed;
    bottom: 20px;
    left: 20px;
    color: hsla(0, 0%, 0%, .6);
    font-size: 16px;
  }
  #containerabout-h3{
    font-size: 3rem;
  }

  #containerabout-ul{
    font-size: 1.7rem;
  }

  @media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
    #containerabout-h3{
      font-size: 1.7rem;
    }

    #containerabout-ul{
      font-size: 1rem;
    }
  }
</style>


<style>
  .chapsec{
    min-height: 30rem;
  background: linear-gradient(to bottom, #b4b2b2 0%, #b4b2b2 70%, #f5f5f5 100%);
  overflow: hidden;
  position: relative;
  }

  .rocket {
  position: absolute;
  top: 25%;
  width: 80px;
  left: calc(50% - 60px);
  margin-left: 1rem;

}
.rocket .rocket-body {
