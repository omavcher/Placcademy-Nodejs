<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panal</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
   <div class="container">
      <aside>
           
         <div class="top">
           <div class="logo">
             <img src="/src/placcademy.png" alt="placcademy" />
           </div>
           <div class="close" id="close_btn">
            <span class="material-symbols-sharp">
              close
              </span>
           </div>
         </div>
         <!-- end top -->
          <div class="sidebar">

            <a href="#" class="active">
              <span class="material-symbols-sharp">grid_view </span>
              <h3 id="dashbordtext">Dashbord</h3>
           </a>
           <a href="/admin/students" >
              <span class="material-symbols-sharp">person_outline </span>

              <h3>All Students</h3>
              <% if (studentCount !== undefined) { %>
              <span class="msg_count"><%= studentCount %></span>
              <% } %>
           </a>

           <a href="/admin/internship">
              <span class="material-symbols-sharp">insights </span>
              <h3>All Internship</h3>

              <% if (InternshipCount !== undefined) { %>
                <span class="msg_count"><%= InternshipCount %></span>
                <% } %>
           </a>
           <a href="/admin/email">
              <span class="material-symbols-sharp">mail_outline </span>
              <h3>Email</h3>
           </a>
           <a href="#">
              <span class="material-symbols-sharp">receipt_long </span>
              <h3>Products</h3>
           </a>
           <a href="#">
              <span class="material-symbols-sharp">report_gmailerrorred </span>
              <h3>Reports</h3>
           </a>
           <a href="#">
              <span class="material-symbols-sharp">settings </span>
              <h3>settings</h3>
           </a>
           <a href="/admin/intership/new">
              <span class="material-symbols-sharp">add </span>
              <h3>Add Internship</h3>
           </a>

           <a style="display: none;" href="/sec"></a>
             


          </div>

      </aside>
      <!-- --------------
        end asid
      -------------------- -->

      <!-- --------------
        start main part
      --------------- -->

      <%- body %>
      <!------------------
         end main
        ------------------->

      <!----------------
        start right main 
      ---------------------->
    <div class="right">

<div class="top">
   <button id="menu_bar">
     <span class="material-symbols-sharp">menu</span>
   </button>

   <div class="theme-toggler">
     <span class="material-symbols-sharp active">light_mode</span>
     <span class="material-symbols-sharp">dark_mode</span>
   </div>
    <div class="profile">
       <div class="info">
           <p><b>Om Awchar</b></p>
           <p>Admin</p>
           <small class="text-muted"></small>
       </div>
    </div>
</div>


     <% if (success && success.length) { %>
      <div class="updates">
        <div class="recent_updates">
           <h2>Recent Update</h2>
      <div style="background-color: rgb(65, 252, 65); border-radius: 20px;" class="update">
         <div class="profile-photo">
            <img src="/src/icons/checked.png" alt="checked"/>
         </div>
        <div class="message">
           <p><b><%= success %></b></p>
        </div></div>
<% } %>
<% if (error && error.length) { %>
  <div class="updates">
    <div class="recent_updates">
       <h2>Recent Update</h2>
     <div style="background-color: rgb(255, 135, 135)" class="update">
        <div class="profile-photo">
           <img src="/src/icons/mark.png" alt="mark"/>
        </div>
       <div class="message">
          <p><b><%= error %></b></p>
       </div>
     </div></div>
<% } %>

      
  
  


   <div class="sales-analytics">
     <h2>Sales Analytics</h2>

      <div class="item onlion">
        <div class="icon">
          <span class="material-symbols-sharp">shopping_cart</span>
        </div>
        <div class="right_text">
          <div class="info">
            <h3>Onlion Orders</h3>
            <small class="text-muted">Last seen 2 Hours</small>
          </div>
          <h5 class="danger">-17%</h5>
          <h3>3849</h3>
        </div>
      </div>
      <div class="item onlion">
        <div class="icon">
          <span class="material-symbols-sharp">shopping_cart</span>
        </div>
        <div class="right_text">
          <div class="info">
            <h3>Onlion Orders</h3>
            <small class="text-muted">Last seen 2 Hours</small>
          </div>
          <h5 class="success">-17%</h5>
          <h3>3849</h3>
        </div>
      </div>
      <div class="item onlion">
        <div class="icon">
          <span class="material-symbols-sharp">shopping_cart</span>
        </div>
        <div class="right_text">
          <div class="info">
            <h3>Onlion Orders</h3>
            <small class="text-muted">Last seen 2 Hours</small>
          </div>
          <h5 class="danger">-17%</h5>
          <h3>3849</h3>
        </div>
      </div>
</div>
      <div class="item add_product">
            <div>
            <span class="material-symbols-sharp">add</span>
            </div>
     </div>
</div>
   </div>
   <script src="/js/admin.js"></script>
</body>
</html>